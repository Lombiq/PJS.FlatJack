@model Orchard.Comments.Models.CommentPart
@if (WorkContext.CurrentUser == null) {
    <div class="form-group">
        @Html.TextBoxFor(m => m.Author, new { @class = "border-radius", placeholder = "Name (required)" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "border-radius", type = "email", placeholder = "Email (required)" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.SiteName, new { @class = "border-radius", type = "url", placeholder = "Website" })
    </div>
}
else {
    @Html.Hidden("Name", WorkContext.CurrentUser.UserName ?? "")
    @Html.Hidden("Email", WorkContext.CurrentUser.Email ?? "")
}
<div class="form-group">
    @Html.TextAreaFor(m => m.CommentText, new { rows = 3, @class = "border-radius", placeholder = "Comments" })
</div>
@Html.HiddenFor(m => m.CommentedOn)
@Html.HiddenFor(m => m.RepliedOn)
<input type="submit" class="border-radius" value="Post Comment" />